{
	"name": "@taqueria/plugin-taquito",
	"version": "0.37.0",
	"description": "A taqueria plugin for originating smart contracts using Taquito",
	"targets": {
		"default": {
			"source": "./index.ts",
			"distDir": "./",
			"context": "node",
			"isLibrary": true
		}
	},
	"scripts": {
		"test": "echo \"Error: no test specified\" && exit 1",
		"pluginInfo": "npx ts-node index.ts --taqRun pluginInfo --i18n {\"foo:\"\"bar\"}",
		"build": "npx tsc -noEmit -p ./tsconfig.json && npx tsup",
		"debugPluginInfo": "node --inspect-brk index.js --taqRun pluginInfo --i18n {\"foo:\"\"bar\"}"
	},
	"keywords": [
		"taqueria",
		"tezos",
		"originate",
		"deploy",
		"pinnaclelabs",
		"pinnacle-labs",
		"plugin",
		"taquito",
		"smart contract"
	],
	"engines": {
		"node": ">=16"
	},
	"author": "Pinnacle Labs",
	"license": "Apache-2.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/pinnacle-labs/taqueria.git",
		"directory": "taqueria-plugin-taquito"
	},
	"bugs": {
		"url": "https://github.com/pinnacle-labs/taqueria/issues"
	},
	"homepage": "https://github.com/pinnacle-labs/taqueria#readme",
	"dependencies": {
		"@taqueria/node-sdk": "^0.37.0",
		"@taquito/michel-codec": "^17.1.0",
		"@taquito/signer": "^17.1.0",
		"@taquito/taquito": "^17.1.0",
		"fast-glob": "^3.2.12"
	},
	"devDependencies": {
		"tsup": "6.5.0",
		"typescript": "^4.9.5"
	},
	"tsup": {
		"entry": [
			"index.ts"
		],
		"sourcemap": true,
		"target": "node16",
		"outDir": "./",
		"dts": true,
		"clean": false,
		"skipNodeModulesBundle": true,
		"platform": "node",
		"format": [
			"esm",
			"cjs"
		]
	},
	"gitHead": "757affb291150820a2bca85abb809ef34a3cb1c1"
}
